{% extends 'base-user.html.twig' %}


{% block body %}
    <div class="edit-categorie-container">

    
        <h1>Modifier produit</h1>
       <div class="current-image">
                    <img src="{{ asset('uploads/images/' ~ produit_store.pathImg) }}" alt="Image actuelle du produit" class="photos">
                </div>

    {{ include('produitstore/_form.html.twig', {'button_label': 'modifier'}) }}

        <div class="actions">
                    <div class="delete-container">

        {{ include('produitstore/_delete_form.html.twig') }}

  </div>

<button class="btn agriculteur-btn">
    <a href="{{ path('app_produitstore_index') }}" class="agriculteur-link">Retour à la liste</a>
</button>

  
        </div>
    </div>



 <style>


 /* Style pour le bouton avec le thème vert */
.agriculteur-btn {
    background-color: #3e5b41; /* Vert foncé */
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    display: inline-block;
    text-decoration: none; /* Retire la décoration du lien */
    text-align: center;
}

/* Effet au survol du bouton */
.agriculteur-btn:hover {
    background-color: #2d5a2a; /* Vert plus foncé */
}

/* Style pour le lien à l'intérieur du bouton */
.agriculteur-link {
    color: white; /* Le texte du lien est blanc pour s'harmoniser avec le bouton */
    text-decoration: none; /* Retire le soulignement du lien */
}

.agriculteur-link:hover {
    color: #c1e1c1; /* Couleur claire pour le survol du lien */
}

        /* Container principal pour l'édition */
        .edit-categorie-container {
            max-width: 900px;
            height: 500%;
            margin: 20px auto;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9); /* Fond léger pour contraste */
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Titre */
        h1 {
            color: #2E8B57; /* Vert foncé pour le thème agricole */
            font-size: 28px;
        margin-top: 20px;
        }

        /* Boutons et liens */
        .btn {
            background-color: #2E8B57;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%; /* Prendre toute la largeur */
            margin-top: 20px;
        }

        .btn:hover {
            background-color: #246a45; /* Vert plus foncé au survol */
        }

        /* Styles pour le lien de retour */
        .back-link {
            display: inline-block;
            margin-top: 15px;
            color:rgb(0, 0, 0);
            text-decoration: none;
            font-weight: bold;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        /* Conteneur de suppression */
        .delete-container {
            margin-top: 30px;
        }

        /* Bouton de suppression */
        .delete-container .btn {
            background-color: #c0392b; /* Rouge pour la suppression */
        }

        .delete-container .btn:hover {
            background-color: #e74c3c; /* Rouge plus clair au survol */
        }
.current-image .photos {
    width: 50%; /* Ajuste la largeur de l'image à 50% de la largeur du conteneur */
    max-width: 500px; /* Limite la taille de l'image à une largeur maximale de 500px */
    margin-left: auto;
    margin-right: auto;
}
    
    </style>
{% endblock %}

