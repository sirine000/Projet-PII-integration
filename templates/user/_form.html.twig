{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    {# Display Global Form Errors #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {# Loop Through Each Form Field and Apply Bootstrap Styling #}
    {% for field in form %}
        <div class="form-group">
            {{ form_label(field, null, {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(field) }}
        </div>
    {% endfor %}

    <button class="btn btn-primary btn-block mt-3">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
